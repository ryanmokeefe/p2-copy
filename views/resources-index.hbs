{{!-- hide table for mobile --}}

  <table class="fullscreen z-depth-5 highlight">
    <thead>
          <tr>
              <th class="center">Rating</th>
              <th class="center">Name</th>
              <th class="center">Subject</th>
              <th class="center">Website</th>
          </tr>
      </thead>
      <tbody>
        {{#each resources as |resource index|}}
        <tr>
          <td>
            <div class="votes">{{resource.votes}}</div>
          </td>
          <td>
            <h4>
              <a href="/resources/{{resource.name}}">{{resource.name}}</a> 
            </h4>    
          </td>
          <td>
            {{resource.subject}} 
          </td>
          <td>
            <a href="{{resource.url}}">{{resource.url}}</a>
          </td>
        </tr>
    {{/each}}
    </tbody>
  </table>

{{!-- show block cards for mobile --}}

{{#each resources as |resource index|}}
<div class="showMobile">
  <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
              <h4>
                <a href="/resources/{{resource.name}}">{{resource.name}}</a> 
              </h4> 
            <p>{{resource.subject}}</p>
          </div>
          <div class="card-action">
            <a href="{{resource.url}}">Visit this site </a>
          </div>
        </div>
      </div>
  </div>
</div>
{{/each}} 

{{!-- end mobile display --}}

<h2 class="text-shadow center">Upload Additional Resources</h2>
<form action="/resources" method="post">
    <input class="input-field row center" type="text" name="resource[name]" placeholder="Title" />
    <input class="input-field row center" type="text" name="resource[subject]" placeholder="Subject" />
    <input class="input-field row center" type="text" name="resource[url]" placeholder="Website Url" />
{{!--  --}}

    <select class="input-field row selections-box" name="resource[type]" >
      <option value="" disabled selected>What type of link is this?:</option>
      <option placeholder="Lesson" value="Lesson">Lesson</option>
      <option placeholder="Article" value="Article">Article</option>
      <option placeholder="Lecture" value="Lecture">Lecture</option>
      <option placeholder="Documentation" value="Documentation">Documentation</option>
      <option placeholder="Podcast" value="Podcast">Podcast</option>
    </select>
{{!--  --}}

    <select class="input-field row selections-box" name="resource[videos]">
      <option value="" disabled selected>Videos?</option>
      <option placeholder="Yes" value="Yes">Yes</option>
      <option placeholder="No" value="No">No</option>
    </select>

  {{!--  --}}

    <select class="input-field row selections-box" name="resource[exercises]">
      <option value="" disabled selected>Exercises?</option>
      <option placeholder="Yes" value="Yes">Yes</option>
      <option placeholder="No" value="No">No</option>
    </select>

{{!--  --}}


    <input class="z-depth-5 submit" type="submit" value="Upload Resource" />
</form>
